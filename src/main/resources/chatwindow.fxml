<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane styleClass="borderpane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ru.bvpotapenko.se.chat2.chatui.ui.controller.ChatWindowController">
    <top>
        <VBox BorderPane.alignment="CENTER">

            <ToolBar>
                <Button mnemonicParsing="false" onAction="#logout" text="Logout"/>
            </ToolBar>

        </VBox>
    </top>
    <center>
        <TextArea fx:id="chatTextAria" styleClass="chattextarea"/>
    </center>
    <bottom>
        <HBox styleClass="bottomhbox" BorderPane.alignment="CENTER" HBox.hgrow="ALWAYS">
            <TextField fx:id="messageTextField" onAction="#sendMessage" HBox.hgrow="ALWAYS"/>
            <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" text="Send"/>
        </HBox>
    </bottom>
    <left>

    </left>
</BorderPane>
